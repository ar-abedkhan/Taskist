<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.EditFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/toolbar"
            android:background="@color/lite_sky"
            android:weightSum="2"
            android:gravity="center"
            >
            <TextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/title"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="ToDo Edit"
                android:layout_marginStart="@dimen/_50sdp"
                android:textSize="@dimen/_20sdp"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                />
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/_60sdp"
                android:id="@+id/savebtn"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_baseline_save_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:paddingBottom="@dimen/_150sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Todo Title : "
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    />


                <EditText
                    android:id="@+id/todotitle"
                    android:layout_width="match_parent"
                    android:background="@drawable/boeder"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:hint="Title here"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Todo Description : "
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    />



                <EditText
                    android:id="@+id/tododiscription"
                    android:background="@drawable/boeder"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:hint="Thats the description"
                    android:inputType="textMultiLine"
                    android:textColor="@color/text_color"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_25sdp"

                    >
                    <LinearLayout
                        android:padding="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >


                        <TextView

                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            android:layout_width="match_parent"
                            android:paddingBottom="@dimen/_7sdp"
                            android:layout_height="wrap_content"
                            android:text="ToDo Cetegory :"
                            android:gravity="center"
                            />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_8sdp">

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginHorizontal="@dimen/_2sdp"
                                    android:background="@drawable/boeder"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_4sdp"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:paddingEnd="@dimen/_6sdp"
                                    android:paddingBottom="@dimen/_4sdp"
                                    android:text="Work"
                                    android:textColor="@color/lite_sky"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="bold" />

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginHorizontal="@dimen/_2sdp"
                                    android:background="@drawable/boeder"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_4sdp"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:paddingEnd="@dimen/_6sdp"
                                    android:paddingBottom="@dimen/_4sdp"
                                    android:text="Personal"
                                    android:textColor="@color/lite_sky"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="bold" />

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginHorizontal="@dimen/_2sdp"
                                    android:background="@drawable/boeder"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_4sdp"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:paddingEnd="@dimen/_6sdp"
                                    android:paddingBottom="@dimen/_4sdp"
                                    android:text="Shopping"
                                    android:textColor="@color/lite_sky"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="bold" />

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginHorizontal="@dimen/_2sdp"
                                    android:background="@drawable/boeder"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_4sdp"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:paddingEnd="@dimen/_6sdp"
                                    android:paddingBottom="@dimen/_4sdp"
                                    android:text="Health"
                                    android:textColor="@color/lite_sky"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="bold" />

                                <CheckBox
                                    android:id="@+id/otherCateCheckBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginHorizontal="@dimen/_2sdp"
                                    android:background="@drawable/boeder"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_4sdp"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:paddingEnd="@dimen/_6sdp"
                                    android:paddingBottom="@dimen/_4sdp"
                                    android:text="Other"
                                    android:textColor="@color/lite_sky"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>





                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >

                        <ImageView
                            app:layout_constraintTop_toBottomOf="@id/todotitle"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_location_on_24"
                            android:id="@+id/todolocationimg"
                            android:paddingEnd="5dp"
                            />

                        <EditText
                            android:layout_marginStart="3dp"
                            app:layout_constraintTop_toBottomOf="@id/todotitle"
                            app:layout_constraintStart_toEndOf="@id/todolocationimg"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_blue_dark"
                            android:text="Location"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:id="@+id/todolocation"
                            />
                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/seeList"
                        android:layout_width="@dimen/_165sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/start_btn_back"
                        android:text="See List"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/seeNotes"
                        android:layout_width="@dimen/_165sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/start_btn_back"
                        android:text="See Notes"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:visibility="gone" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_margin="@dimen/_5sdp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start Time"
                            android:textColor="@color/text_color"
                            android:paddingBottom="@dimen/_3sdp"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            />
                        <EditText
                            android:background="@drawable/boeder"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:id="@+id/starttime"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingStart="@dimen/_2sdp"
                            android:paddingEnd="@dimen/_2sdp"
                            android:inputType="time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="09-22 : PM"
                            android:textColor="@color/lite_sky"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="End Time"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textColor="@color/text_color"
                            android:textStyle="bold" />
                        <EditText
                            android:background="@drawable/boeder"
                            android:gravity="center"
                            android:id="@+id/endtime"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:inputType="time"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingStart="@dimen/_2sdp"
                            android:paddingEnd="@dimen/_2sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="09-22 : PM"
                            android:textColor="@color/lite_sky"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            />



                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_margin="@dimen/_8sdp"
                        app:cardElevation="@dimen/_8sdp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_6sdp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Priority :"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/text_color"
                                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                                />
                            <!--                            <TextView-->
                            <!--                                android:paddingTop="@dimen/_5sdp"-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:text="HIGH"-->
                            <!--                                android:id="@+id/todopriority"-->
                            <!--                                android:gravity="center"-->
                            <!--                                android:textStyle="bold"-->
                            <!--                                android:textColor="@android:color/holo_green_dark"-->
                            <!--                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"-->
                            <!--                                />-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >

                                <RadioGroup
                                    android:id="@+id/priorityRadioGroup"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_margin="@dimen/_2sdp"
                                    >

                                    <RadioButton
                                        android:id="@+id/priorityHigh"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_marginHorizontal="@dimen/_5sdp"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:text="High"
                                        android:textColor="@android:color/holo_green_dark"
                                        android:textSize="@dimen/_11ssp"
                                        android:textStyle="bold" />

                                    <RadioButton
                                        android:id="@+id/priorityMedium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_marginHorizontal="@dimen/_5sdp"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:text="Medium"
                                        android:textColor="#F1DA0D"
                                        android:textSize="@dimen/_11ssp"
                                        android:textStyle="bold" />

                                    <RadioButton
                                        android:id="@+id/priorityLow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_marginHorizontal="@dimen/_5sdp"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:text="Low"
                                        android:textColor="@android:color/holo_red_dark"
                                        android:textSize="@dimen/_11ssp"
                                        android:textStyle="bold" />

                                </RadioGroup>

                            </LinearLayout>

                        </LinearLayout>







                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_gravity="center"
                        app:cardElevation="@dimen/_10sdp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_6sdp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Status :"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/text_color"
                                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                                />
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="UNDONE"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/boeder"
                                android:id="@+id/todoStatus"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_red_dark"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                />


                        </LinearLayout>







                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Participate : "
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Participate Name"
                    android:background="@drawable/boeder"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:inputType="textPersonName"
                    android:textColor="@color/lite_sky"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:id="@+id/participateName"
                    android:textSize="@dimen/_17sdp"
                    />



            </LinearLayout>

        </ScrollView>




    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>