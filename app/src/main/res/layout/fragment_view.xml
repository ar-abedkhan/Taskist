<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ViewFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/title"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/lite_sky"
        android:text="ToDo View"
        android:textSize="@dimen/_20sdp"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:paddingBottom="@dimen/_20sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp"
            android:paddingBottom="@dimen/_150sdp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Todo Title : "
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                />
            <TextView
                android:id="@+id/todotitle"
                android:layout_width="match_parent"
                android:background="@drawable/boeder"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_5sdp"                android:layout_height="wrap_content"
                android:text="this is todos title"
                android:textColor="@color/lite_sky"
                android:layout_marginStart="@dimen/_25sdp"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Todo Description : "
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                />
            <TextView
                android:id="@+id/tododiscription"
                android:background="@drawable/boeder"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:text="Thats the description"
                android:textColor="@color/lite_sky"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                />

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardElevation="@dimen/_10sdp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_6sdp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Priority :"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/text_color"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            />
                        <TextView
                            android:paddingTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HIGH"
                            android:id="@+id/todopriority"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_green_dark"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            />


                    </LinearLayout>







                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_10sdp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_6sdp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status :"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/text_color"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            />
                        <TextView
                            android:paddingTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="UNDONE"
                            android:id="@+id/todoStatus"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_red_dark"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            />


                    </LinearLayout>







                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"

                >
                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

<!--commiting-->
                    <TextView
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textStyle="bold"
                        android:textColor="@color/text_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ToDo Cetegory :"
                        android:gravity="center"
                        />


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/wordCetagory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Work"
                                android:textColor="@color/lite_sky"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" , "
                                android:textColor="@color/lite_sky"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/healthCetagory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Health"
                                android:textColor="@color/lite_sky"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" , "
                                android:textColor="@color/lite_sky"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/shoppingCetagory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shopping"
                                android:textColor="@color/lite_sky"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" , "
                                android:textColor="@color/lite_sky"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/personalCetagory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Personal"
                                android:textColor="@color/lite_sky"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" , "
                                android:textColor="@color/lite_sky"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/othersCetagory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Others"
                                android:textColor="@color/lite_sky"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>





            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:paddingTop="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >

                    <ImageView
                        app:layout_constraintTop_toBottomOf="@id/todotitle"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_location_on_24"
                        android:id="@+id/todolocationimg"
                        android:paddingEnd="5dp"
                        />

                    <TextView
                        android:layout_marginStart="3dp"
                        app:layout_constraintTop_toBottomOf="@id/todotitle"
                        app:layout_constraintStart_toEndOf="@id/todolocationimg"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_blue_dark"
                        android:text="Location"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:id="@+id/todolocation"
                        />
                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="@dimen/_165sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="See List"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:id="@+id/seeList"
                    android:background="@drawable/start_btn_back"
                    android:layout_marginEnd="@dimen/_10sdp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="@dimen/_165sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="See Notes"
                    android:id="@+id/seeNotes"
                    android:textAllCaps="false"
                    android:visibility="invisible"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:background="@drawable/start_btn_back"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/_5sdp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start Time"
                        android:textColor="@color/text_color"
                        android:paddingBottom="@dimen/_3sdp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        />
                    <TextView
                        android:background="@drawable/boeder"
                        android:gravity="center"
                        android:id="@+id/starttime"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="09-22 : PM"
                        android:textColor="@color/lite_sky"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="End Time"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:paddingBottom="@dimen/_3sdp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        />
                    <TextView
                        android:background="@drawable/boeder"
                        android:gravity="center"
                        android:id="@+id/endtime"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="09-22 : PM"
                        android:textColor="@color/lite_sky"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        />



                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Participate : "
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participate Name"
                android:background="@drawable/boeder"
                android:textColor="@color/lite_sky"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_16sdp"
                android:id="@+id/participateName"
                />



        </LinearLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>